<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <meta name="keywords" content="bing, google, let me bing that for you, let me google that for you" />
    <meta name="description" content="Let Me Bing That For You! - For all those people that find it more convenient to bother you with their questions rather than Bing it for themselves." />

    <link rel="stylesheet" type="text/css" href="~/css/Bing.css" />
    <link rel="stylesheet" type="text/css" href="~/css/Site.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/fontawesome/css/all.min.css" />
    <style type="text/css">
        #bgDiv {
            background-image: url(https://source.unsplash.com/featured/1600x900/daily?@keywordService.GetDailyKeyword());
            background-repeat: no-repeat;
        }

        #bgDivFull {
            background-image: url(https://source.unsplash.com/featured/1600x900/daily?@keywordService.GetDailyKeyword());
            background-repeat: no-repeat;
        }
    </style>

    <link rel="icon" href="~/favicon.ico" />

    <script src="https://code.jquery.com/jquery-1.12.4.min.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js" type="text/javascript"></script>

    <environment include="Production">
        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-NY00N1JKK9"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'G-NY00N1JKK9');
        </script>
    </environment>

    @RenderSection("Header", required: false)
</head>
<body>
    <table id="hp_table" role="none">
        <tbody>
            <tr>
                <td id="hp_cellCenter" class="hp_hd">
                    <div id="hp_container">
                        @RenderBody()
                        @await Html.PartialAsync("_Footer")
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

    @RenderSection("Scripts", required: false)
</body>
</html>
