<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <meta name="robots" content="noindex" />

    <link rel="stylesheet" type="text/css" href="~/css/Bing.css" />
    <link rel="stylesheet" type="text/css" href="~/css/Site.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/fontawesome/css/all.min.css" />
    <style type="text/css">
        #bgDiv {
            background-image: url(https://source.unsplash.com/featured/1600x900/daily?@keywordService.GetDailyKeyword());
            background-repeat: no-repeat;
        }

        #bgDivFull {
            background-image: url(https://source.unsplash.com/featured/1600x900/daily?@keywordService.GetDailyKeyword());
            background-repeat: no-repeat;
        }
    </style>

    <link rel="icon" href="~/favicon.ico" />

    <script src="https://code.jquery.com/jquery-1.12.4.min.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js" type="text/javascript"></script>

    @RenderSection("Header", required: false)
</head>
<body>
    <table id="hp_table" role="none">
        <tbody>
            <tr>
                <td id="hp_cellCenter" class="hp_hd">
                    <div id="hp_container">
                        @RenderBody()
                        @await Html.PartialAsync("_Footer")
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

    @RenderSection("Scripts", required: false)
</body>
</html>
